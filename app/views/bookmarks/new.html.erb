<!-- app/views/bookmarks/new.html.erb -->
<h1>New Bookmark for <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="mb-3">
    <%= f.association :movie, input_html: { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= f.input :comment, input_html: { class: 'form-control' } %>
  </div>
  <%= f.submit 'Add Bookmark', class: 'btn btn-primary' %>
<% end %>

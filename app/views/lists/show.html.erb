<!-- app/views/lists/show.html.erb -->
<h1><%= @list.name %></h1>

<h2>Bookmarks</h2>
<%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary mb-3' %>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
    </li>
  <% end %>
</ul>

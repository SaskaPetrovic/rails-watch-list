<!-- app/views/lists/index.html.erb -->
<%= render 'shared/header' %>

<div class="jumbotron jumbotron-fluid d-flex align-items-center justify-content-center" style="background-image: url('<%= asset_path('img.jpg') %>'); background-size: cover; background-position: center; margin: 0; padding: 0; height: 70vh;">
  <div class="text-center text-white" style="background: rgba(0, 0, 0, 0.2); padding: 20px;">
    <h1 class="display-4">Save Any Kind of Movie</h1>
  </div>
</div>

<div class="container pt-4 my-5">

  <div class="d-flex justify-content-between mb-3">
    <h3 class="">My Lists</h3>
    <%= link_to 'Create a Movie List', new_list_path, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <img src="https://via.placeholder.com/300" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
